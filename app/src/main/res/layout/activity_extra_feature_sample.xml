<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HorizontalCarouselSampleActivity">

    <com.sung2063.sliders.carousel.CarouselView
        android:id="@+id/carousel_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:scrollDirection="horizontal"
        app:showSlideNumber="true"
        app:slideNumberTextSize="45"
        app:showIndicator="true"
        app:indicatorScale="1"
        app:showSubTitle="true"
        app:showSlideButtons="true"
        app:indicatorSelectedIcon="@drawable/ic_paw_selected"
        app:indicatorUnselectedIcon="@drawable/ic_paw_unselected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>